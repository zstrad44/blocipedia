<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-12 col-sm-12">
      <div class="panel panel-sm panel-primary">
        <div class="panel-heading"><h2>Wikis</h2></div>
        <div class="panel-body">
          <div class="panel-group">
            <% @wikis.each do |wiki| %>
              <div class="panel panel-info">
                <div class="panel-heading"><h3>
                  <span>Wiki Title: <%= wiki.title %></span>
                </h3>
                  <% if wiki.private %>
                    <span class="label label-danger"> Private</span>
                  <% else %>
                    <span class="label label-success"> Public</span>
                  <% end %>
                </div>
                <div class="panel-body">

                  <span class="label label-primary"><%= wiki.user %></span>
                    <div class="panel">
                      <p><%= wiki.body %></p>
                    </div>
                </div>
                <div class="panel-footer">
                  <p>Posted: Yesterday</p>
                  <div class="dropdown pull-right">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" data-toggle="dropdown"><i class="fa fa-pencil" aria-hidden="true"></i> Edit
                    <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Edit Wiki', edit_wiki_path(wiki), class: "" %></li>
                      <li><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' }, class: "" %></li>
                    </ul>
                  </div>


                  <%= link_to '<i class="fa fa-black-tie" aria-hidden="true"></i> View Wiki'.html_safe, wiki, class: "btn btn-primary btn-sm pull-right" %>
                </div>
              </div>
            <% end %>
          </div>

        </div>
        <div class="panel-footer" style="text-align:center;">
          <%= link_to 'New Wiki', new_wiki_path, class: 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>
